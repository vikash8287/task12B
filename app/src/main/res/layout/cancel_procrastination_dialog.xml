<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/Dialog"
    android:padding="14dp"
    android:orientation="vertical"
    android:background="@drawable/dialog_background">

    <TextView
        android:id="@+id/too_many_topics_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/too_many_topics_title"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#000"
        android:textAlignment="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <TextView
        android:id="@+id/too_many_topics_body"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/too_many_topics_body"
        android:textSize="18sp"
        android:textColor="#222"
        android:textAlignment="center"
        app:layout_constraintTop_toBottomOf="@id/too_many_topics_title"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <com.google.android.material.progressindicator.LinearProgressIndicator
        android:id="@+id/loading_indicator"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:indeterminate="true"
        app:trackCornerRadius="2dp"
        app:trackColor="@color/colorPrimary"
        app:indicatorColor="@color/primary"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/too_many_topics_body"
        android:visibility="gone"/>

    <TableRow
        android:id="@+id/buttons_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layoutDirection="ltr"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/loading_indicator"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <Button
            android:id="@+id/cancelProcrastinationButton"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:layout_weight="1"
            android:background="#0000"
            android:text="Confirm"
            android:textAllCaps="false"
            android:textColor="#000"
            android:textSize="16sp"
            style="?android:attr/buttonBarButtonStyle" />
        <Button
            android:id="@+id/dismissDialogButton"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginHorizontal="10dp"
            android:background="#0000"
            android:text="Dismiss"
            android:textAllCaps="false"
            android:textColor="#F33"
            android:textSize="16sp"
            style="?android:attr/buttonBarButtonStyle" />
    </TableRow>
</LinearLayout>