<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@drawable/dialog_background"
    style="@style/Dialog"
    android:paddingHorizontal="8dp"
    android:paddingVertical="16dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/too_many_messages_heading"
        android:textStyle="bold"
        android:textSize="24sp"
        android:textColor="#2A2C51"/>
    <androidx.legacy.widget.Space
        android:layout_width="0dp"
        android:layout_height="8dp" />
    <TextView
        android:id="@+id/topicTitleTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/too_many_messages_body"
        android:textStyle="normal"
        android:textSize="18sp"
        android:textColor="#2A2C51"/>
    <androidx.legacy.widget.Space
        android:layout_width="0dp"
        android:layout_height="16dp" />
    <Button
        android:id="@+id/getChamberlyPlusButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/button_outlined"
        android:backgroundTint="@color/golden"
        android:text="Get Chamberly Plus"
        android:textAllCaps="false"
        android:textColor="@color/golden"/>
    <androidx.legacy.widget.Space
        android:layout_width="0dp"
        android:layout_height="8dp" />
    <Button
        android:id="@+id/cancelButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/button_outlined"
        android:backgroundTint="#C1C1C9"
        android:text="Cancel"
        android:textAllCaps="false"
        android:textColor="#C1C1C9"/>
</LinearLayout>