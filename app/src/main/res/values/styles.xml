<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme that extends from AppCompat -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here -->
    </style>

    <!-- Dialog style -->
    <style name="Dialog" parent="Theme.AppCompat.Dialog">
        <item name="android:windowMinWidthMajor">85%</item>
        <item name="android:windowMinWidthMinor">85%</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowCloseOnTouchOutside">true</item>
    </style>

    <style name="PopupMessageOptions" parent="Theme.AppCompat.Dialog">
        <item name="android:windowMinWidthMajor">95%</item>
        <item name="android:windowMinWidthMinor">95%</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowCloseOnTouchOutside">true</item>
    </style>

    <style name="PopupMenu" parent="Widget.AppCompat.PopupMenu">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:maxWidth">500dp</item>
        <item name="elevation">8dp</item>
        <item name="android:textColor">#000</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowCloseOnTouchOutside">true</item>
    </style>

    <style name="CircularButton" parent="Widget.AppCompat.ImageButton">
        <item name="cornerRadius">1000dp</item>
        <item name="android:padding">2dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_width">48dp</item>
        <item name="android:background">@drawable/notification_badge</item>
        <item name="android:layout_margin">4dp</item>
    </style>

    <!-- Custom text style -->
    <style name="create_a_display_name">
        <item name="android:textSize">26sp</item>
        <item name="android:textColor">#2E2E5B</item>
    </style>

</resources>
