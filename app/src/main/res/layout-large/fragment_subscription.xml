<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.fragments.SubscriptionFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:id="@+id/chamberlyPlusText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="32sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Vent and share how you feel"
            android:textColor="#2E2E5B"
            android:textSize="16sp"/>
        <ImageView
            android:id="@+id/chamberlyBackground"
            android:layout_width="match_parent"
            android:layout_height="325dp"
            android:background="@drawable/people_background"
            android:src="@drawable/people"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/background_bottom_sheet"
            android:maxWidth="300dp"
            android:orientation="vertical"
            android:paddingTop="16dp">
            <LinearLayout
                android:id="@+id/chamberlyBenefits"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" />
            <LinearLayout
                android:id="@+id/benefitConditions"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="vertical" />
            <LinearLayout
                android:id="@+id/subscriptionBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginHorizontal="12dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/rounded_button"
                android:orientation="vertical"
                android:paddingVertical="8dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Get 3 days trial"
                    android:textColor="@color/white"
                    android:textSize="18sp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/subscription_price"
                    android:textColor="@color/white"
                    android:textSize="14sp" />
            </LinearLayout>
            <!--            <TextView-->
            <!--                android:id="@+id/restoreBtn"-->
            <!--                android:layout_width="wrap_content"-->
            <!--                android:layout_height="wrap_content"-->
            <!--                android:layout_gravity="center"-->
            <!--                android:layout_margin="12dp"-->
            <!--                android:text="Restore Purchase"-->
            <!--                android:textColor="#B0B0CA"-->
            <!--                android:textSize="20sp" />-->
        </LinearLayout>
    </LinearLayout>

</FrameLayout>